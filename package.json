{
  "scripts": {
    "start": "yarn nuchain:start",
    "nuchain:start": "cd website; docusaurus-start",
    "nuchain:build": "BUILDING=true; cd website; docusaurus-build; node ./postprocess",
    "nuchain:inject": "node --experimental-json-modules scripts/inject.mjs --rootDir website/build/nuchain-wiki --node wss://node-sg.nuchain.riset.tech",
    "nuchain:publish-gh-pages": "PUBLISHING=true; cd website; docusaurus-publish",
    "nuchain:pdf": "yarn mr-pdf --initialDocsURL=\"http://localhost:3000/docs/en/getting-started\" --paginationSelector=\".docs-next.button\" --excludeSelectors=\".docs-prevnext,.navigationSlider,#klaro,#footer\" --pdfFormat=\"A4\" --outputPDFFilename=\"website/static/polkadot-wiki.pdf\" --pdfMargin=\"30, 5, 10, 5\"",
    "nuchain:uploadPdf": "node --experimental-json-modules scripts/ipfs-upload-pdf.mjs",
    "nuchain:remove": "node --experimental-json-modules scripts/removeUneeded.mjs dot",
    "mirror": "node --experimental-json-modules scripts/mirror.mjs",
    "publish-gh-pages": "cd website; docusaurus-publish",
    "write-translations": "cd website; docusaurus-write-translations",
    "version": "docusaurus-version",
    "rename-version": "docusaurus-rename-version",
    "crowdin-upload": "crowdin --config ../crowdin.yaml upload sources --auto-update -b master",
    "crowdin-download": "crowdin --config ../crowdin.yaml download -b master",
    "postinstall": "patch-package",
    "generateErrorTable": "node --experimental-json-modules scripts/generateErrorTable.mjs >> docs/maintain-errors.md ; npx prettier docs/maintain-errors.md --write"
  },
  "devDependencies": {
    "docusaurus": "^1.14.7"
  },
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^4.0.0",
    "@octokit/rest": "^18.5.2",
    "@polkadot/api": "^4.5.1",
    "@polkadot/keyring": "^6.1.1",
    "axios": "^0.21.1",
    "fs-extra": "^9.1.0",
    "ipfs-http-client": "^49.0.4",
    "katex": "^0.13.2",
    "mr-pdf": "^0.2.3",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "react-bootstrap": "^1.5.2",
    "remarkable-katex": "^1.1.7",
    "replace-in-file": "^6.2.0",
    "semver": "^7.3.4",
    "yargs": "^16.2.0"
  }
}
